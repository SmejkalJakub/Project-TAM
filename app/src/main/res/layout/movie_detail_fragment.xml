<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="#000000"
    tools:context=".ui.find_movie.details.MovieDetailFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/movieDetailPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="fill|fill_horizontal"
                    tools:src="@tools:sample/avatars" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/movieDetailTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Small Text"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/genres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="#FFFFFF" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/basicInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="#FFFFFF" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="7dp">

                        <LinearLayout
                            android:id="@+id/logosLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/netflixLogo"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                tools:src="@tools:sample/avatars" />

                            <ImageView
                                android:id="@+id/hboLogo"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                tools:src="@tools:sample/avatars" />

                            <ImageView
                                android:id="@+id/amazonLogo"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                tools:src="@tools:sample/avatars" />

                            <ImageView
                                android:id="@+id/appletv_logo"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                tools:src="@tools:sample/avatars" />

                            <Button
                                android:id="@+id/moreButton"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_weight="0"
                                android:text="OTHERS"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingTop="5dp">



        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/movieDetailDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:text="asdawdawdawdawdawdasjdajlkwjdlkasjdliasfiajhsflahjdahwkdlhalkdfhaljfhljashdflakjshdfljkahslkjhfueihsafes"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/backToMovieButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back" />
        </TableRow>

    </TableLayout>

</FrameLayout>