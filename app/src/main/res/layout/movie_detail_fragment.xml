<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="20dp"
    tools:context=".ui.find_movie.details.MovieDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/movieDetailPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="fill|fill_horizontal"
                    tools:src="@tools:sample/avatars" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/movieDetailTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/karla_bold"
                            android:text="Small Text"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/genres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/karla"
                            android:text="TextView"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/basicInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/karla"
                            android:text="TextView"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:id="@+id/logosLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/netflixLogo"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                tools:src="@tools:sample/avatars" />

                            <ImageView
                                android:id="@+id/hboLogo"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                tools:src="@tools:sample/avatars" />

                            <ImageView
                                android:id="@+id/amazonLogo"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                tools:src="@tools:sample/avatars" />

                            <ImageView
                                android:id="@+id/appletv_logo"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                tools:src="@tools:sample/avatars" />

                            <Button
                                android:id="@+id/moreButton"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_weight="0"
                                android:text="Others"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/movieDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/karla"
                android:paddingTop="5dp"
                android:text="asdawdawdawdawdawdasjdajlkwjdlkasjdliasfiajhsflahjdahwkdlhalkdfhaljfhljashdflakjshdfljkahslkjhfueihsafes"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backToMovieButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/karla"
                android:minHeight="60dp"
                android:text="Back"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="20sp"
                app:cornerRadius="10dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>